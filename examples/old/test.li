MessageBoxA : (hwnd : ^void, lptext : ^s8, lpcaption : ^s8, utype : u32) -> int #foreign("user32");
malloc : (size : s64) -> ^s64 #foreign("msvcrt");

vec3 :: struct{
	x : float;
	y : float;
	z : float;
}

proc : ()
{
	{
		// call of external function
		a : ^void = 0;
		text : ^s8;
		lpcap : ^s8;
		utype : u32;
		res : int = MessageBoxA(a, text, lpcap, utype);
	}
	{
		// proc pointer and address of
		a : int = 1;
		b : ^int = &a;
		c := &proc;
	}
	{
		// dereference
		a : ^int;
		b : ^s64;
		c : s64 = *a + *b;
	}
	{
		// upcast
		a : u32;
		b : u64 = a;
	}
}
