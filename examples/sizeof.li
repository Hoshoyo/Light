#import "windows/print.li"

main :: () -> s32 {
	//a : s32 = #sizeof foo + 4;
	b : foo;
	b.value = 3;
	b.foozle = array{1.0, 2.0};
	b.u.f = 4.0;
	
	print_s32(b.value);
	print_string("\n");
	print_r32(b.foozle[0]);
	print_r32(b.foozle[1]);
	print_r32(b.u.f);
	print_string("\n");
	
	print_s32(#sizeof foo);
	
	return 0;
}

foo :: struct {
	value  : s32;
	foozle : [2]r32;
	u : surprise;
}

surprise :: union {
	f : r32;
	i : s64;
}